<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chris.lsmimagechooser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--mudule ImageChooser所需的Activities -->
        <activity
            android:name="com.kollway.imagechooser.activity.ChooseDialogActivity"
            android:theme="@style/ActivityTransparent" />
        <activity android:name="com.kollway.imagechooser.activity.AlbumActivity" />
        <activity android:name="com.kollway.imagechooser.activity.ImageListActivity" />
        <activity android:name="com.kollway.imagechooser.activity.ClipActivity" />
    </application>

</manifest>
