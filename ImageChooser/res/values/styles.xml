<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActivityTransparent">
        <item name="android:windowBackground">
     		@color/transparent_background
	  	</item>  
	  	<item name="android:windowNoTitle">true</item>  
	  	<item name="android:windowIsTranslucent">true</item>    
	  	<item name="android:windowAnimationStyle">
       		@style/AnimationActivity
 		</item>  
	</style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fast_choose_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fast_choose_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fast_choose_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fast_choose_out</item>
    </style>

</resources>
